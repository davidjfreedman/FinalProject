<div class="leftSide">
    <div class="imageBox">
        <div class="shadowDiv"></div>
        <div class="imageDiv">
            <div class="imageDivLeft">        
                <div class="arrowLeft"><i class="fa fa-chevron-left"></i>
            </div>
        </div>
        <img src="http://placekitten.com/g/800/600">
            <div class="imageDivRight">
                <div class="arrowRight"><i class="fa fa-chevron-right"></i>
                </div>
            </div>
        </div>
        <div class="listingTitle">
            <h4>
                <%= title %>
            </h4>
            <h6>
                <em>Only $
                    <%= price %>
                </em>
            </h6>
        </div>
    </div>
    <div class="otherInfo">
        <div class="sellerBox" id="leftBox">
            <img src="./images/seller.jpg">
            <div class="sellerText">
                <b>Insert Seller Name</b>
                <br>
                <p>Henderson, MO.
                    <br>Rating:
                    <span><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                    </span><i class="fa fa-star"></i><i class="fa fa-star"></i> (6)</p>
            </div>
        </div>
        <div class="uniqueness"><i>Only <em><%= quantity %></em> Left!</i>
        </div>
    </div>
</div>
<div class="infoContent">
    <div class="descriptionBox">
        <em>Description:</em>
        <p>
            <%= description %>
        </p>
    </div>
    <div class="etsyLink">
        <a href="<%= url %>">
            <div class="etsyButton">
                View this item on <b>Etsy</b>
            </div>
        </a>
    </div>
</div>
